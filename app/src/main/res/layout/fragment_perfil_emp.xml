<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PerfilEmpFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/FotoEmp"
            android:layout_width="123dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtl_nombre_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/styleTextInputLayout">

            <EditText
                android:id="@+id/et_nombre_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nombrePerfil"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtl_matricula_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/styleTextInputLayout">

            <EditText
                android:id="@+id/et_matricula_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/matriculaPerfil"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtl_puesto_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/styleTextInputLayout">

            <EditText
                android:id="@+id/et_puesto_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/puestoPerfil"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capacitaciones"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/azulTapia"/>

        <ListView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#EEEEEE">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/sanciones"
            android:textColor="@color/azulTapia"/>

        <ListView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#EEEEEE">
        </ListView>
    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_margin="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_gravity="end|bottom"/>
</FrameLayout>