<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/azulTapia"
            android:textStyle="bold"
            android:text="Matricula:"/>
        <TextView
            android:id="@+id/id_matricula_Capasitacion"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/azulTapia"
            android:text="Nombre Empleado:"/>
        <TextView
            android:id="@+id/id_Nombre_empleado_Capasitacion"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/azulTapia"
            android:text="Capacitaciones:"/>

        <ListView
            android:id="@+id/listCapacitaciones"
            android:layout_width="match_parent"
            android:layout_height="300dp"></ListView>

    </LinearLayout>
</android.support.v7.widget.CardView>
