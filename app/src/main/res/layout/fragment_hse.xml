<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".fragment.HSEFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="293dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logotapia" />


        <ImageView
            android:id="@+id/FotoEmp"
            android:layout_width="123dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/idingreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText

                android:id="@+id/et_pass_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/ingresar_matricula"
                android:inputType="text"
                android:maxLength="50"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:textColorHint="#000000"
                android:textSize="15sp"/>


            <ImageButton
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="@color/azulTapia"
                android:layout_margin="5dp"
                android:src="@drawable/lupablanca" />
    </LinearLayout>

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Escanea tu codigo Aqui"
                android:textColor="@android:color/black"
                android:textStyle="bold" />



        <Button
            android:focusedByDefault="true"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_ScanCod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escanear Codigo"
            android:background="@drawable/boton_ovalo"
            style="@style/raisedButton"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>