<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16px"
    android:background="#FFFFFF"
    tools:context=".HSEFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logotapia" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Cumpliendo a nuestros clientes"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/azulTapia" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Bienvenida Mayra !!!"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/azulTapia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtl_pass_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColorHint="@color/colorPrimary"
                app:hintTextAppearance="@style/styleTextInputLayout">

                <EditText
                    android:id="@+id/et_pass_login"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:hint="Ingresar Matricula"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/azulTapia"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Buscar"
                android:textColor="#FFFFFF" />


        </LinearLayout>

        <ImageView
            android:layout_width="127dp"
            android:layout_height="114dp"
            android:scaleType="fitXY"
            android:src="@drawable/qr" />

        <Button
            android:id="@+id/bt_loginFragment"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:text="Escanear Codigo"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</FrameLayout>